<div class="min-h-screen bg-gray-50"
     data-controller="onboarding"
     data-onboarding-storage-key-value="stock_by_location_onboarding_completed"
     data-onboarding-list-empty-value="<%= @items.empty? %>">
  <div data-onboarding-target="overlay" class="fixed inset-0 bg-black/60 z-40 pointer-events-none transition-opacity duration-300 hidden"></div>
  <div data-onboarding-target="container" class="fixed inset-0 z-[9998] pointer-events-none hidden">
    <div data-onboarding-target="step" data-onboarding-target-selector="#onboarding-stock-by-location-header" class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('stock_transactions.stock_by_location.onboarding.step1.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('stock_transactions.stock_by_location.onboarding.step1.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#skip" class="text-sm text-gray-500 hover:text-gray-700"><%= t('stock_transactions.stock_by_location.onboarding.buttons.skip') %></button>
          <button data-action="click->onboarding#next" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
            <%= t('stock_transactions.stock_by_location.onboarding.buttons.next') %>
          </button>
        </div>
      </div>
    </div>

    <div data-onboarding-target="step" data-onboarding-target-selector="#onboarding-stock-by-location-print" class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('stock_transactions.stock_by_location.onboarding.step2.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('stock_transactions.stock_by_location.onboarding.step2.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#previous" class="text-sm text-gray-500 hover:text-gray-700"><%= t('stock_transactions.stock_by_location.onboarding.buttons.previous') %></button>
          <div class="flex gap-3">
            <button data-action="click->onboarding#skip" class="text-sm text-gray-500 hover:text-gray-700"><%= t('stock_transactions.stock_by_location.onboarding.buttons.skip') %></button>
            <button data-action="click->onboarding#next" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
              <%= t('stock_transactions.stock_by_location.onboarding.buttons.next') %>
            </button>
          </div>
        </div>
      </div>
    </div>

    <div data-onboarding-target="step" data-onboarding-target-selector="#onboarding-stock-by-location-table" class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('stock_transactions.stock_by_location.onboarding.step3.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('stock_transactions.stock_by_location.onboarding.step3.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#previous" class="text-sm text-gray-500 hover:text-gray-700"><%= t('stock_transactions.stock_by_location.onboarding.buttons.previous') %></button>
          <div class="flex gap-3">
            <button data-action="click->onboarding#skip" class="text-sm text-gray-500 hover:text-gray-700"><%= t('stock_transactions.stock_by_location.onboarding.buttons.skip') %></button>
            <button data-action="click->onboarding#next" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
              <%= t('stock_transactions.stock_by_location.onboarding.buttons.next') %>
            </button>
          </div>
        </div>
      </div>
    </div>

    <div data-onboarding-target="step"
         data-onboarding-target-selector="#onboarding-stock-by-location-item-row"
         data-onboarding-hide-when-empty-value="true"
         class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('stock_transactions.stock_by_location.onboarding.step4.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('stock_transactions.stock_by_location.onboarding.step4.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#previous" class="text-sm text-gray-500 hover:text-gray-700"><%= t('stock_transactions.stock_by_location.onboarding.buttons.previous') %></button>
          <div class="flex gap-3">
            <button data-action="click->onboarding#skip" class="text-sm text-gray-500 hover:text-gray-700"><%= t('stock_transactions.stock_by_location.onboarding.buttons.skip') %></button>
            <button data-action="click->onboarding#next" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
              <%= t('stock_transactions.stock_by_location.onboarding.buttons.next') %>
            </button>
          </div>
        </div>
      </div>
    </div>

    <div data-onboarding-target="step"
         data-onboarding-target-selector="#onboarding-stock-by-location-total"
         data-onboarding-hide-when-empty-value="true"
         class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('stock_transactions.stock_by_location.onboarding.step5.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('stock_transactions.stock_by_location.onboarding.step5.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#previous" class="text-sm text-gray-500 hover:text-gray-700"><%= t('stock_transactions.stock_by_location.onboarding.buttons.previous') %></button>
          <div class="flex gap-3">
            <button data-action="click->onboarding#skip" class="text-sm text-gray-500 hover:text-gray-700"><%= t('stock_transactions.stock_by_location.onboarding.buttons.skip') %></button>
            <button data-action="click->onboarding#complete" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
              <%= t('stock_transactions.stock_by_location.onboarding.buttons.finish') %>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div id="onboarding-stock-by-location-header" class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-2xl font-bold text-gray-900"><%= t('stock_transactions.stock_by_location.title') %></h1>
        <p class="mt-1 text-sm text-gray-500"><%= t('stock_transactions.stock_by_location.subtitle') %></p>
      </div>
      
      <button
        data-onboarding-target="restartButton"
        data-action="click->onboarding#restart"
        class="hidden inline-flex items-center px-3 py-2 border border-purple-200 text-sm font-medium rounded-md text-purple-700 bg-purple-50 hover:bg-purple-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500"
        title="<%= t('stock_transactions.stock_by_location.onboarding.tutorial_button_title') %>">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9M20 20v-5h-.581m-15.357-2a8.003 8.003 0 0015.357 2"/>
        </svg>
        <%= t('stock_transactions.stock_by_location.onboarding.tutorial_button') %>
      </button>

      <div class="flex space-x-4">
        <button id="onboarding-stock-by-location-print" onclick="window.print()" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
          </svg>
          <%= t('stock_transactions.stock_by_location.print') %>
        </button>
      </div>
    </div>

    <div id="onboarding-stock-by-location-table" class="bg-white shadow overflow-x-auto rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr>
            <th scope="col" class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider sticky left-0 bg-white">
              <%= t('stock_transactions.stock_by_location.table.item') %>
            </th>
            <% @locations.each do |location| %>
              <th scope="col" class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <%= location.name %>
              </th>
            <% end %>
            <th id="onboarding-stock-by-location-total" scope="col" class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t('stock_transactions.stock_by_location.table.total') %>
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @items.each_with_index do |item, index| %>
            <tr <%= 'id="onboarding-stock-by-location-item-row"' if index.zero? %>>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 sticky left-0 bg-white">
                <div>
                  <%= item.name %>
                  <div class="text-xs text-gray-500"><%= item.sku %></div>
                </div>
              </td>
              <% @locations.each do |location| %>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <% stock = @stock_levels[item.id][location.id] %>
                  <span class="<%= stock.to_f == 0 ? 'text-red-500' : '' %>">
                    <%= number_with_precision(stock, precision: 2, strip_insignificant_zeros: true) %>
                  </span>
                </td>
              <% end %>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <% total = @stock_levels[item.id].values.sum { |v| v.to_f } %>
                <%= number_with_precision(total, precision: 2, strip_insignificant_zeros: true) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div> 