<!-- PWA Install Prompt -->
<div data-controller="pwa-install" 
     data-pwa-install-engagement-threshold-value="3"
     data-pwa-install-dismissal-cooldown-value="86400000"
     data-pwa-install-show-delay-value="2000"
     class="fixed inset-0 z-50 flex items-end justify-center p-4 pointer-events-none">
  
  <!-- Install Prompt Modal -->
  <div data-pwa-install-target="prompt" 
       class="hidden pointer-events-auto bg-white dark:bg-gray-800 rounded-lg shadow-xl border border-gray-200 dark:border-gray-700 max-w-sm w-full transform transition-all duration-300"
       role="dialog" 
       aria-labelledby="install-prompt-title" 
       aria-describedby="install-prompt-description">
    
    <!-- Header -->
    <div class="p-6 pb-4">
      <div class="flex items-center mb-4">
        <div class="flex-shrink-0 w-12 h-12 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
          </svg>
        </div>
        <div class="ml-4">
          <h3 id="install-prompt-title" class="text-lg font-semibold text-gray-900 dark:text-white">
            Install Purple Stock
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Get the full app experience
          </p>
        </div>
      </div>
      
      <p id="install-prompt-description" class="text-gray-700 dark:text-gray-300 text-sm leading-relaxed">
        Install Purple Stock for faster access, offline functionality, and a native app experience on your device.
      </p>
    </div>

    <!-- Benefits List -->
    <div class="px-6 pb-4">
      <ul data-pwa-install-target="benefitsList" class="space-y-2 text-sm">
        <li class="flex items-center text-gray-600 dark:text-gray-400">
          <svg class="w-4 h-4 text-green-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          <span>Works offline - manage inventory anywhere</span>
        </li>
        <li class="flex items-center text-gray-600 dark:text-gray-400">
          <svg class="w-4 h-4 text-green-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          <span>Faster loading and better performance</span>
        </li>
        <li class="flex items-center text-gray-600 dark:text-gray-400">
          <svg class="w-4 h-4 text-green-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          <span>Native app experience on your device</span>
        </li>
        <li class="flex items-center text-gray-600 dark:text-gray-400">
          <svg class="w-4 h-4 text-green-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          <span>Quick access from your home screen</span>
        </li>
      </ul>
    </div>

    <!-- Action Buttons -->
    <div class="px-6 pb-6 flex space-x-3">
      <button data-pwa-install-target="installButton" 
              data-action="click->pwa-install#installApp"
              class="flex-1 bg-purple-600 hover:bg-purple-700 focus:ring-4 focus:ring-purple-200 dark:focus:ring-purple-800 text-white font-medium rounded-lg text-sm px-4 py-2.5 transition-colors duration-200 focus:outline-none"
              type="button">
        <span class="flex items-center justify-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Install App
        </span>
      </button>
      
      <button data-pwa-install-target="dismissButton" 
              data-action="click->pwa-install#dismissPrompt"
              class="px-4 py-2.5 text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg transition-colors duration-200 focus:outline-none"
              type="button">
        Not now
      </button>
    </div>
  </div>
</div>

<!-- Onboarding Modal (shown after successful installation) -->
<div data-pwa-install-target="onboardingModal" 
     class="hidden fixed inset-0 z-50 flex items-center justify-center p-4 bg-black bg-opacity-50"
     role="dialog" 
     aria-labelledby="onboarding-title" 
     aria-describedby="onboarding-description">
  
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full transform transition-all duration-300">
    <!-- Header -->
    <div class="p-6 text-center">
      <div class="w-16 h-16 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
      </div>
      
      <h3 id="onboarding-title" class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
        Welcome to Purple Stock!
      </h3>
      
      <p id="onboarding-description" class="text-gray-600 dark:text-gray-400 text-sm">
        You've successfully installed Purple Stock. Here are some tips to get started:
      </p>
    </div>

    <!-- Onboarding Tips -->
    <div class="px-6 pb-4">
      <div class="space-y-4">
        <div class="flex items-start">
          <div class="flex-shrink-0 w-8 h-8 bg-purple-100 dark:bg-purple-900 rounded-full flex items-center justify-center mr-3">
            <span class="text-purple-600 dark:text-purple-400 font-semibold text-sm">1</span>
          </div>
          <div>
            <h4 class="font-medium text-gray-900 dark:text-white text-sm">Quick Access</h4>
            <p class="text-gray-600 dark:text-gray-400 text-xs">Find Purple Stock on your home screen for instant access</p>
          </div>
        </div>
        
        <div class="flex items-start">
          <div class="flex-shrink-0 w-8 h-8 bg-purple-100 dark:bg-purple-900 rounded-full flex items-center justify-center mr-3">
            <span class="text-purple-600 dark:text-purple-400 font-semibold text-sm">2</span>
          </div>
          <div>
            <h4 class="font-medium text-gray-900 dark:text-white text-sm">Offline Mode</h4>
            <p class="text-gray-600 dark:text-gray-400 text-xs">Continue working even without internet connection</p>
          </div>
        </div>
        
        <div class="flex items-start">
          <div class="flex-shrink-0 w-8 h-8 bg-purple-100 dark:bg-purple-900 rounded-full flex items-center justify-center mr-3">
            <span class="text-purple-600 dark:text-purple-400 font-semibold text-sm">3</span>
          </div>
          <div>
            <h4 class="font-medium text-gray-900 dark:text-white text-sm">Mobile Optimized</h4>
            <p class="text-gray-600 dark:text-gray-400 text-xs">Enjoy touch-friendly controls designed for mobile use</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Close Button -->
    <div class="px-6 pb-6">
      <button data-action="click->pwa-install#closeOnboarding"
              class="w-full bg-purple-600 hover:bg-purple-700 focus:ring-4 focus:ring-purple-200 dark:focus:ring-purple-800 text-white font-medium rounded-lg text-sm px-4 py-2.5 transition-colors duration-200 focus:outline-none"
              type="button">
        Get Started
      </button>
    </div>
  </div>
</div>