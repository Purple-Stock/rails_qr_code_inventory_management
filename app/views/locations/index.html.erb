<div class="min-h-screen bg-gray-50" data-controller="onboarding" data-onboarding-storage-key-value="locations_index_onboarding_completed" data-onboarding-list-empty-value="<%= @locations.empty? %>">
  <div data-onboarding-target="overlay" class="fixed inset-0 bg-black/60 z-40 pointer-events-none transition-opacity duration-300 hidden"></div>

  <div data-onboarding-target="container" class="fixed inset-0 z-[9998] pointer-events-none hidden">
    <div data-onboarding-target="step" data-onboarding-target-selector="#onboarding-locations-title" class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('locations.index.onboarding.step1.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('locations.index.onboarding.step1.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#skip" class="text-sm text-gray-500 hover:text-gray-700"><%= t('locations.index.onboarding.buttons.skip') %></button>
          <button data-action="click->onboarding#next" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
            <%= t('locations.index.onboarding.buttons.next') %>
          </button>
        </div>
      </div>
    </div>

    <div data-onboarding-target="step" data-onboarding-target-selector="#onboarding-locations-search" class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('locations.index.onboarding.step2.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('locations.index.onboarding.step2.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#previous" class="text-sm text-gray-500 hover:text-gray-700"><%= t('locations.index.onboarding.buttons.previous') %></button>
          <div class="flex gap-2">
            <button data-action="click->onboarding#skip" class="text-sm text-gray-500 hover:text-gray-700"><%= t('locations.index.onboarding.buttons.skip') %></button>
            <button data-action="click->onboarding#next" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
              <%= t('locations.index.onboarding.buttons.next') %>
            </button>
          </div>
        </div>
      </div>
    </div>

    <div data-onboarding-target="step" data-onboarding-target-selector="#onboarding-locations-create" class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('locations.index.onboarding.step3.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('locations.index.onboarding.step3.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#previous" class="text-sm text-gray-500 hover:text-gray-700"><%= t('locations.index.onboarding.buttons.previous') %></button>
          <div class="flex gap-2">
            <button data-action="click->onboarding#skip" class="text-sm text-gray-500 hover:text-gray-700"><%= t('locations.index.onboarding.buttons.skip') %></button>
            <% if @locations.empty? %>
              <button data-action="click->onboarding#complete" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
                <%= t('locations.index.onboarding.buttons.finish') %>
              </button>
            <% else %>
              <button data-action="click->onboarding#next" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
                <%= t('locations.index.onboarding.buttons.next') %>
              </button>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div data-onboarding-target="step" data-onboarding-target-selector="#onboarding-locations-table" data-onboarding-hide-when-empty-value="true" class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('locations.index.onboarding.step4.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('locations.index.onboarding.step4.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#previous" class="text-sm text-gray-500 hover:text-gray-700"><%= t('locations.index.onboarding.buttons.previous') %></button>
          <button data-action="click->onboarding#complete" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
            <%= t('locations.index.onboarding.buttons.finish') %>
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col gap-6 mb-8">
      <div id="onboarding-locations-title" class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= t('locations.index.title') %></h1>
          <p class="mt-1 text-gray-600"><%= t('locations.index.subtitle') %></p>
        </div>
        <button 
          data-onboarding-target="restartButton"
          data-action="click->onboarding#restart"
          class="inline-flex items-center px-3 py-1.5 rounded-lg text-xs font-medium text-gray-600 bg-white hover:bg-gray-50 border border-gray-300 transition-all duration-150 hidden"
          title="<%= t('locations.index.onboarding.tutorial_button_title') %>">
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= t('locations.index.onboarding.tutorial_button') %>
        </button>
      </div>

      <div class="flex flex-col sm:flex-row sm:items-center gap-4">
        <div id="onboarding-locations-search" class="flex-1 min-w-0">
          <div class="relative rounded-md shadow-sm">
            <%= form_with(url: team_locations_path(@team), 
                method: :get,
                html: { autocomplete: "off" }, 
                data: { 
                  controller: "search-form",
                  search_form_delay_value: 300,
                  turbo_frame: "locations_list",
                  turbo_action: "advance"
                }) do |f| %>
              <%= f.text_field :query,
                  value: params[:query],
                  class: "block w-full pr-10 sm:text-sm border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500",
                  placeholder: t('locations.index.search_placeholder'),
                  data: { 
                    action: "input->search-form#search",
                    search_form_target: "input"
                  } %>
              <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
              </div>
            <% end %>
          </div>
        </div>

        <div id="onboarding-locations-create" class="flex-shrink-0">
          <%= link_to new_team_location_path(@team), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            <%= t('locations.index.new_location') %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="bg-white shadow rounded-lg">
      <div class="p-6">
        <%= turbo_frame_tag "locations_list" do %>
          <div class="flex flex-col">
            <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
              <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                <div id="onboarding-locations-table" class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                  <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                      <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('locations.index.table.name') %></th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('locations.index.table.description') %></th>
                        <th scope="col" class="relative px-6 py-3">
                          <span class="sr-only"><%= t('locations.index.table.actions') %></span>
                        </th>
                      </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                      <% @locations.each do |location| %>
                        <tr>
                          <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">
                              <%= link_to location.name, 
                                  team_location_path(@team, location), 
                                  class: "hover:text-purple-600",
                                  data: { turbo_frame: "_top" } %>
                            </div>
                          </td>
                          <td class="px-6 py-4 text-sm text-gray-500">
                            <%= location.description %>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <div class="flex justify-end space-x-3">
                              <%= link_to edit_team_location_path(@team, location), 
                                  class: "text-purple-600 hover:text-purple-900 inline-flex items-center",
                                  data: { turbo_frame: "_top" } do %>
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                              <% end %>
                              
                              <%= button_to team_location_path(@team, location), 
                                  method: :delete,
                                  class: "text-red-600 hover:text-red-900 inline-flex items-center",
                                  data: { 
                                    turbo_confirm: t('locations.index.table.delete_confirm'),
                                    turbo_frame: "_top"
                                  } do %>
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                </svg>
                              <% end %>
                            </div>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>