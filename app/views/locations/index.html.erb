<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-6">
      <div class="flex-1 min-w-0">
        <div class="relative rounded-md shadow-sm">
          <%= form_with(url: team_locations_path(@team), 
              method: :get,
              html: { autocomplete: "off" }, 
              data: { 
                controller: "search-form",
                search_form_delay_value: 300,
                turbo_frame: "locations_list",
                turbo_action: "advance"
              }) do |f| %>
            <%= f.text_field :query,
                value: params[:query],
                class: "block w-full pr-10 sm:text-sm border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500",
                placeholder: t('locations.index.search_placeholder'),
                data: { 
                  action: "input->search-form#search",
                  search_form_target: "input"
                } %>
            <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
          <% end %>
        </div>
      </div>
      
      <div class="flex items-center ml-4">
        <%= link_to new_team_location_path(@team), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
          <%= t('locations.index.new_location') %>
        <% end %>
      </div>
    </div>

    <div class="bg-white shadow rounded-lg">
      <div class="p-6">
        <%= turbo_frame_tag "locations_list" do %>
          <%= responsive_table do %>
            <%= responsive_table_wrapper(
              content_tag(:div, class: "shadow overflow-hidden border-b border-gray-200 sm:rounded-lg") do
                content_tag(:table, class: "min-w-full divide-y divide-gray-200") do
                  content_tag(:thead, class: "bg-gray-50") do
                    content_tag(:tr) do
                      concat content_tag(:th, t('locations.index.table.name'), scope: "col", class: "px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider")
                      concat content_tag(:th, t('locations.index.table.description'), scope: "col", class: "px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider")
                      concat content_tag(:th, content_tag(:span, t('locations.index.table.actions'), class: "sr-only"), scope: "col", class: "relative px-6 py-3")
                    end
                  end +
                  content_tag(:tbody, class: "bg-white divide-y divide-gray-200") do
                    @locations.map do |location|
                      content_tag(:tr) do
                        concat content_tag(:td, class: "px-6 py-4 whitespace-nowrap") do
                          content_tag(:div, class: "text-sm font-medium text-gray-900") do
                            link_to location.name, team_location_path(@team, location), 
                              class: "hover:text-purple-600", data: { turbo_frame: "_top" }
                          end
                        end
                        concat content_tag(:td, location.description, class: "px-6 py-4 text-sm text-gray-500")
                        concat content_tag(:td, class: "px-6 py-4 whitespace-nowrap text-right text-sm font-medium") do
                          content_tag(:div, class: "flex justify-end space-x-3") do
                            edit_link = link_to edit_team_location_path(@team, location), 
                              class: "text-purple-600 hover:text-purple-900 inline-flex items-center min-h-11 min-w-11",
                              data: { turbo_frame: "_top" } do
                              content_tag(:svg, class: "w-5 h-5", fill: "none", stroke: "currentColor", viewBox: "0 0 24 24") do
                                content_tag(:path, "", "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": "2", d: "M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z")
                              end
                            end
                            
                            delete_button = button_to team_location_path(@team, location), 
                              method: :delete,
                              class: "text-red-600 hover:text-red-900 inline-flex items-center min-h-11 min-w-11",
                              data: { 
                                turbo_confirm: t('locations.index.table.delete_confirm'),
                                turbo_frame: "_top"
                              } do
                              content_tag(:svg, class: "w-5 h-5", fill: "none", stroke: "currentColor", viewBox: "0 0 24 24") do
                                content_tag(:path, "", "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": "2", d: "M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16")
                              end
                            end
                            
                            edit_link + delete_button
                          end
                        end
                      end
                    end.join.html_safe
                  end
                end
              end
            ) %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div> 