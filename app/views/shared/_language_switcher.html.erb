<div class="language-switcher">
  <% I18n.available_locales.each do |locale| %>
    <% if locale == I18n.locale %>
      <span class="current-locale"><%= locale.to_s.upcase %></span>
    <% else %>
      <%= link_to locale.to_s.upcase, { locale: locale }, class: "locale-link" %>
    <% end %>
  <% end %>
</div> 