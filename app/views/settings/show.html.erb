<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between mb-8">
      <div class="flex items-center">
        <%= link_to team_stock_transactions_path(@team), class: "mr-4 text-gray-400 hover:text-gray-500 transition-colors" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>
        <h1 class="text-2xl font-bold text-gray-900">
          <svg class="w-8 h-8 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <%= t('settings.title') %>
        </h1>
      </div>
    </div>

    <div class="space-y-6">
      <nav class="flex space-x-4">
        <%= link_to team_settings_path(@team, section: 'billing'),
            class: "px-3 py-2 text-sm font-medium #{@section == 'billing' ? 'text-gray-900 bg-white rounded-md shadow-sm' : 'text-gray-500 hover:text-gray-700'}" do %>
          <svg class="w-5 h-5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
          </svg>
          <%= t('settings.sections.billing') %>
        <% end %>

        <%= link_to team_settings_path(@team, section: 'account'),
            class: "px-3 py-2 text-sm font-medium #{@section == 'account' ? 'text-gray-900 bg-white rounded-md shadow-sm' : 'text-gray-500 hover:text-gray-700'}" do %>
          <svg class="w-5 h-5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          <%= t('settings.sections.account') %>
        <% end %>

        <%= link_to team_webhooks_path(@team),
            class: "px-3 py-2 text-sm font-medium" do %>
          <svg class="w-5 h-5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          Webhooks
        <% end %>
      </nav>

      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <% if @section == 'billing' %>
            <%= render 'settings/billing' %>
          <% else %>
            <%= render 'settings/account' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 