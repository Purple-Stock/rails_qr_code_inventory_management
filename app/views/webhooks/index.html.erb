<div class="container mx-auto px-4">
  <h1 class="text-2xl font-bold mb-4">Webhooks</h1>

  <div class="mb-4">
    <%= link_to 'New Webhook', new_team_webhook_path(@team), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="bg-white shadow-md rounded my-6">
    <table class="min-w-full table-auto">
      <thead>
        <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
          <th class="py-3 px-6 text-left">URL</th>
          <th class="py-3 px-6 text-left">Event</th>
          <th class="py-3 px-6 text-center">Actions</th>
        </tr>
      </thead>
      <tbody class="text-gray-600 text-sm font-light">
        <% @webhooks.each do |webhook| %>
          <tr class="border-b border-gray-200 hover:bg-gray-100">
            <td class="py-3 px-6 text-left whitespace-nowrap"><%= webhook.url %></td>
            <td class="py-3 px-6 text-left"><%= webhook.event %></td>
            <td class="py-3 px-6 text-center">
              <div class="flex item-center justify-center">
                <%= link_to 'Edit', edit_team_webhook_path(@team, webhook), class: "w-4 mr-2 transform hover:text-purple-500 hover:scale-110" %>
                <%= button_to 'Delete', team_webhook_path(@team, webhook), method: :delete, class: "w-4 mr-2 transform hover:text-purple-500 hover:scale-110", style: "background: none; border: none; cursor: pointer; color: inherit;" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
