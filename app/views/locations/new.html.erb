<div class="min-h-screen bg-gray-50 py-8" data-controller="onboarding" data-onboarding-storage-key-value="locations_new_onboarding_completed">
  <div data-onboarding-target="overlay" class="fixed inset-0 bg-black/60 z-40 pointer-events-none transition-opacity duration-300 hidden"></div>

  <div data-onboarding-target="container" class="fixed inset-0 z-[9998] pointer-events-none hidden">
    <div data-onboarding-target="step" data-onboarding-target-selector="#onboarding-new-location-title" class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('locations.new.onboarding.step1.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('locations.new.onboarding.step1.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#skip" class="text-sm text-gray-500 hover:text-gray-700"><%= t('locations.new.onboarding.buttons.skip') %></button>
          <button data-action="click->onboarding#next" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
            <%= t('locations.new.onboarding.buttons.next') %>
          </button>
        </div>
      </div>
    </div>

    <div data-onboarding-target="step" data-onboarding-target-selector="#onboarding-location-name" class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('locations.new.onboarding.step2.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('locations.new.onboarding.step2.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#previous" class="text-sm text-gray-500 hover:text-gray-700"><%= t('locations.new.onboarding.buttons.previous') %></button>
          <div class="flex gap-2">
            <button data-action="click->onboarding#skip" class="text-sm text-gray-500 hover:text-gray-700"><%= t('locations.new.onboarding.buttons.skip') %></button>
            <button data-action="click->onboarding#next" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
              <%= t('locations.new.onboarding.buttons.next') %>
            </button>
          </div>
        </div>
      </div>
    </div>

    <div data-onboarding-target="step" data-onboarding-target-selector="#onboarding-location-description" class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('locations.new.onboarding.step3.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('locations.new.onboarding.step3.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#previous" class="text-sm text-gray-500 hover:text-gray-700"><%= t('locations.new.onboarding.buttons.previous') %></button>
          <div class="flex gap-2">
            <button data-action="click->onboarding#skip" class="text-sm text-gray-500 hover:text-gray-700"><%= t('locations.new.onboarding.buttons.skip') %></button>
            <button data-action="click->onboarding#next" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
              <%= t('locations.new.onboarding.buttons.next') %>
            </button>
          </div>
        </div>
      </div>
    </div>

    <div data-onboarding-target="step" data-onboarding-target-selector="#onboarding-location-actions" class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('locations.new.onboarding.step4.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('locations.new.onboarding.step4.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#previous" class="text-sm text-gray-500 hover:text-gray-700"><%= t('locations.new.onboarding.buttons.previous') %></button>
          <button data-action="click->onboarding#complete" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
            <%= t('locations.new.onboarding.buttons.finish') %>
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="md:flex md:items-center md:justify-between">
      <div id="onboarding-new-location-title" class="flex items-start gap-4">
        <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
          <%= t('locations.form.title.new') %>
        </h2>
        <button 
          data-onboarding-target="restartButton"
          data-action="click->onboarding#restart"
          class="mt-1 inline-flex items-center px-3 py-1.5 rounded-lg text-xs font-medium text-gray-600 bg-white hover:bg-gray-50 border border-gray-300 transition-all duration-150 hidden"
          title="<%= t('locations.new.onboarding.tutorial_button_title') %>">
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= t('locations.new.onboarding.tutorial_button') %>
        </button>
      </div>
    </div>

    <div class="mt-8">
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <%= render 'form', location: @location %>
        </div>
      </div>
    </div>
  </div>
</div> 