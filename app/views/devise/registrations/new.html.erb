<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-purple-700 via-purple-500 to-indigo-500 p-6">
  <div class="w-full max-w-4xl bg-white rounded-lg shadow-xl overflow-hidden grid md:grid-cols-2">
    <div class="hidden md:flex items-center justify-center bg-gradient-to-br from-purple-600 to-indigo-600 p-10">
      <div class="text-center">
        <h1 class="text-4xl font-bold text-white mb-2">Purple Stock</h1>
        <p class="text-lg text-purple-100">Your Inventory Simplified</p>
      </div>
    </div>
    <div class="p-8">
      <h2 class="text-2xl font-bold mb-2">Criar conta</h2>
      <p class="text-gray-600 mb-8">Digite seus dados para criar sua conta</p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div>
          <%= f.label :email, "E-mail", class: "block text-sm font-bold mb-2 text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@example.com", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent" %>
        </div>
        <div>
          <%= f.label :password, "Senha", class: "block text-sm font-bold mb-2 text-gray-700" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent" %>
          <% if @minimum_password_length %>
            <p class="mt-1 text-sm text-gray-500">Mínimo <%= @minimum_password_length %> caracteres</p>
          <% end %>
        </div>
        <div>
          <%= f.label :password_confirmation, "Confirmar Senha", class: "block text-sm font-bold mb-2 text-gray-700" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent" %>
        </div>
        <%= f.submit "Criar conta", class: "w-full bg-purple-600 text-white py-3 px-4 rounded-lg font-bold hover:bg-purple-700 transition" %>
      <% end %>
      <div class="mt-8 text-center text-gray-600">
        Já tem uma conta?
        <%= link_to "Entrar", new_session_path(resource_name), class: "text-purple-600 font-bold hover:text-purple-800" %>
      </div>
    </div>
  </div>
</div>
