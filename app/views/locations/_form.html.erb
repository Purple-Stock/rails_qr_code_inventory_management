<%= form_with(model: [@team, location], class: "space-y-6") do |f| %>
  <% if location.errors.any? %>
    <div class="bg-red-50 p-4 rounded-md">
      <h2 class="text-red-800 text-sm font-medium"><%= pluralize(location.errors.count, t('locations.form.errors.one'), t('locations.form.errors.other')) %>:</h2>
      <ul class="mt-3 list-disc list-inside text-red-700 text-sm">
        <% location.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, t('locations.form.fields.name'), class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= f.label :description, t('locations.form.fields.description'), class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to t('locations.form.buttons.cancel'), team_locations_path(@team), class: "btn btn-secondary" %>
    <%= f.submit t('locations.form.buttons.save'), class: "btn btn-primary" %>
  </div>
<% end %> 