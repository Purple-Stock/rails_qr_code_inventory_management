      }
    }
  }

  // Legacy init removed (Stimulus handles search/scanner)

  function openStockOutBarcodeModal() {
    console.log('Opening stock out barcode modal');
    document.getElementById('stockOutBarcodeModal').classList.remove('hidden');
    
    // Stimulus scanner manages camera state
    
    // Focus the input field after a small delay to allow the modal to display
    setTimeout(() => {
      const input = document.getElementById('stockOutBarcodeInput');
      if (input) {
        input.focus();
      }
