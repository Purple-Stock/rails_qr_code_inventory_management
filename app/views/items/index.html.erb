<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-6">
      <div class="flex-1 min-w-0">
        <div class="relative rounded-md shadow-sm">
          <input type="text" 
                 class="block w-full pr-10 sm:text-sm border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500" 
                 placeholder="Buscar itens...">
          <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
        </div>
      </div>
      
      <div class="flex items-center ml-4 space-x-4">
        <select class="block pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-purple-500 focus:border-purple-500 sm:text-sm rounded-md">
          <option>Todas as Categorias</option>
          <% @categories.each do |category| %>
            <option><%= category %></option>
          <% end %>
        </select>
        <%= link_to "#", class: "text-gray-600 hover:text-gray-900" do %>
          Exportar CSV
        <% end %>
        <%= link_to "#", class: "text-gray-600 hover:text-gray-900" do %>
          Importar CSV
        <% end %>
        <%= link_to "#", class: "text-gray-600 hover:text-gray-900" do %>
          Escanear
        <% end %>
        <%= link_to new_team_item_path(@team), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
          Adicionar Item
        <% end %>
      </div>
    </div>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr>
            <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nome</th>
            <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">SKU</th>
            <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tipo</th>
            <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Em Estoque</th>
            <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Preço</th>
            <th class="px-6 py-3 bg-gray-50 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @items.any? %>
            <% @items.each do |item| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= link_to team_item_path(@team, item), class: "text-sm font-medium text-gray-900 hover:text-purple-600" do %>
                    <%= item.name %>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= item.sku %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= item.item_type %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= item.initial_quantity %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">R$ <%= number_with_precision(item.price, precision: 2) %></td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                  <%= link_to edit_team_item_path(@team, item), 
                      class: "text-purple-600 hover:text-purple-900 inline-flex items-center" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                  <% end %>

                  <%= button_to team_item_path(@team, item), 
                      method: :delete,
                      class: "text-red-600 hover:text-red-900 inline-flex items-center",
                      form: { 
                        data: { 
                          turbo_confirm: "Are you sure you want to delete this item? This action cannot be undone." 
                        } 
                      } do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="6" class="px-6 py-4 text-center text-sm text-gray-500">
                Nenhum item encontrado. Adicione seu primeiro item para começar.
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div> 