<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-6">
      <div class="flex-1 min-w-0">
        <!-- Desktop Search -->
        <div class="hidden lg:block relative rounded-md shadow-sm">
          <%= form_with(url: team_items_path(@team), 
              method: :get,
              html: { autocomplete: "off" }, 
              data: { 
                controller: "search-form",
                search_form_delay_value: 300,
                turbo_frame: "items_list",
                turbo_action: "advance"
              }) do |f| %>
            <%= f.text_field :query,
                value: params[:query],
                class: "block w-full pr-10 sm:text-sm border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500",
                placeholder: t('items.index.search_placeholder'),
                data: { 
                  action: "input->search-form#search",
                  search_form_target: "input"
                } %>
            <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
          <% end %>
        </div>
        
        <!-- Mobile Search -->
        <div class="lg:hidden">
          <%= render 'shared/mobile_search', search_url: team_items_path(@team) %>
        </div>
      </div>
      
      <div class="flex items-center ml-4 space-x-4">
        <select class="block pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-purple-500 focus:border-purple-500 sm:text-sm rounded-md">
          <option><%= t('items.index.all_categories') %></option>
          <% @categories.each do |category| %>
            <option><%= category %></option>
          <% end %>
        </select>
        <%= link_to export_team_items_path(@team, format: :csv),
            class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <%= t('items.index.export_csv') %>
        <% end %>
        <%= link_to new_team_item_path(@team), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
          <%= t('items.index.add_item') %>
        <% end %>
      </div>
    </div>

    <div class="bg-white shadow rounded-lg">
      <div class="p-6">
        <%= turbo_frame_tag "items_list" do %>
          <div data-controller="infinite-scroll" 
               data-infinite-scroll-url-value="<%= team_items_path(@team) %>"
               data-infinite-scroll-has-more-value="<%= @has_more %>"
               data-infinite-scroll-page-value="1"
               data-infinite-scroll-virtual-scroll-enabled-value="true"
               data-infinite-scroll-item-height-value="80"
               data-infinite-scroll-buffer-size-value="5"
               data-infinite-scroll-pull-to-refresh-enabled-value="true"
               class="infinite-scroll-container max-h-96 lg:max-h-screen">
            
            <%= responsive_table do %>
              <%= responsive_table_wrapper(
                content_tag(:div, class: "shadow overflow-hidden border-b border-gray-200 sm:rounded-lg") do
                  content_tag(:table, class: "min-w-full divide-y divide-gray-200") do
                    content_tag(:thead, class: "bg-gray-50 sticky top-0 z-10") do
                      content_tag(:tr) do
                        concat content_tag(:th, t('items.index.qr_code'), scope: "col", class: "px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider")
                        concat content_tag(:th, t('items.index.item'), scope: "col", class: "px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider")
                        concat content_tag(:th, t('items.index.sku'), scope: "col", class: "px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider")
                        concat content_tag(:th, t('items.index.type'), scope: "col", class: "px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider")
                        concat content_tag(:th, t('items.index.current_stock'), scope: "col", class: "px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider")
                        concat content_tag(:th, t('items.index.price'), scope: "col", class: "px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider")
                        concat content_tag(:th, content_tag(:span, t('items.index.actions'), class: "sr-only"), scope: "col", class: "relative px-6 py-3")
                      end
                    end +
                    content_tag(:tbody, class: "bg-white divide-y divide-gray-200", data: { infinite_scroll_target: "container" }) do
                      render partial: 'items_list', locals: { items: @items }
                    end
                  end
                end
              ) %>
            <% end %>
            
            <!-- Virtual scroll container for height calculation -->
            <div data-infinite-scroll-target="virtualContainer" class="virtual-scroll-spacer"></div>
            
            <!-- Loading indicator -->
            <div data-infinite-scroll-target="loadingIndicator" class="infinite-scroll-loading hidden" aria-live="polite">
              <svg class="infinite-scroll-loading-spinner" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              <span class="ml-2 text-sm text-gray-500">Loading more items...</span>
            </div>
            
            <!-- End message -->
            <div data-infinite-scroll-target="endMessage" class="infinite-scroll-end-message hidden" role="status" aria-live="polite">
              <div class="text-center py-8">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <p class="mt-2 text-sm text-gray-500">All items loaded</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 