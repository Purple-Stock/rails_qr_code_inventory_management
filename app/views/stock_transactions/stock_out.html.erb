      <div>
        <h1 class="text-2xl font-bold text-red-600"><%= t('stock_transactions.stock_out.title') %></h1>
        <p class="mt-1 text-sm text-gray-500"><%= t('stock_transactions.stock_out.subtitle') %></p>
      </div>
