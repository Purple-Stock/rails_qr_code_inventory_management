<div class="space-y-6">
  <div class="border-b border-gray-200 pb-5">
    <h3 class="text-lg font-medium leading-6 text-gray-900"><%= t('settings.account.profile.title') %></h3>
    <p class="mt-1 text-sm text-gray-500"><%= t('settings.account.profile.description') %></p>
  </div>

  <%= form_for(current_user, url: user_registration_path, html: { method: :put, class: "space-y-6" }) do |f| %>
    <div>
      <%= f.label :email, t('settings.account.profile.fields.email'), class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.email_field :email, 
            class: "shadow-sm focus:ring-purple-500 focus:border-purple-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
    </div>

    <div>
      <%= f.label :password, t('settings.account.profile.fields.password'), class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.password_field :password, 
            class: "shadow-sm focus:ring-purple-500 focus:border-purple-500 block w-full sm:text-sm border-gray-300 rounded-md",
            placeholder: t('settings.account.profile.fields.password_placeholder') %>
      </div>
    </div>

    <div>
      <%= f.label :password_confirmation, t('settings.account.profile.fields.password_confirmation'), class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.password_field :password_confirmation, 
            class: "shadow-sm focus:ring-purple-500 focus:border-purple-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
    </div>

    <div>
      <%= f.label :current_password, t('settings.account.profile.fields.current_password'), class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.password_field :current_password, 
            class: "shadow-sm focus:ring-purple-500 focus:border-purple-500 block w-full sm:text-sm border-gray-300 rounded-md",
            placeholder: t('settings.account.profile.fields.current_password_placeholder') %>
      </div>
    </div>

    <div class="pt-5">
      <div class="flex justify-end">
        <%= f.submit t('settings.account.profile.buttons.update'), 
            class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" %>
      </div>
    </div>
  <% end %>

  <div class="border-t border-gray-200 pt-6">
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800"><%= t('settings.account.delete.title') %></h3>
          <div class="mt-2">
            <%= button_to t('settings.account.delete.buttons.delete'), 
                registration_path(current_user), 
                method: :delete,
                data: { confirm: t('settings.account.delete.fields.confirm') },
                class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 