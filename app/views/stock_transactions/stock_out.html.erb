  function handleStockOutModalKeydown(event) {
    if (event.key === 'Escape' && !document.getElementById('stockOutBarcodeModal').classList.contains('hidden')) {
      closeStockOutBarcodeModal();
    }
  }

  function initStockOutScanner() {
    // If Stimulus scanner controller is present, skip legacy init
    if (document.querySelector('#stockout-scanner-container[data-controller="scanner"]')) {
      window.stockOutScannerInitialized = true;
      return;
    }
    // Only initialize once
    if (window.stockOutScannerInitialized) return;
    
    const scannerContainer = document.getElementById('stockout-scanner-container');
    const closeCameraBtn = document.getElementById('stockout-close-camera-btn');
    
    // Ensure close button is hidden initially (camera not running)
    if (closeCameraBtn) {
      closeCameraBtn.classList.add('hidden');
    }
    
    // Keep the existing structure but make sure the file upload button exists
    if (!document.getElementById('stockout-qr-input-file')) {
      loadHtml5QrcodeScript();
    }
    
    window.stockOutScannerInitialized = true;
  }

  function toggleStockOutScanner() {
    // Delegate to Stimulus if present
    if (document.querySelector('#stockout-scanner-container[data-controller="scanner"]')) {
      const btn = document.getElementById('stockout-start-scanner');
      if (btn) btn.click();
      return;
    }
    if (stockOutQrCodeScanner) {
      stopStockOutScanner();
      return;
    }

    startStockOutScanner();
  }

  function startStockOutScanner() {
    // Delegate to Stimulus if present
    if (document.querySelector('#stockout-scanner-container[data-controller="scanner"]')) {
      const btn = document.getElementById('stockout-start-scanner');
      if (btn) btn.click();
      return;
    }
    const startButton = document.getElementById('stockout-start-scanner');
    if (!startButton) {
      console.error('Start scanner button not found');
      return;
    }
    
    startButton.textContent = 'Starting...';
    startButton.disabled = true;

    // Load the html5-qrcode script directly from CDN
    if (!window.Html5Qrcode) {
      const script = document.createElement('script');
      script.src = 'https://unpkg.com/html5-qrcode@2.3.8/html5-qrcode.min.js';
      script.onload = function() {
        initializeStockOutScanner(startButton);
      };
      script.onerror = function() {
        console.error('Failed to load HTML5-QRCode library');
        startButton.textContent = 'Camera Not Available';
        startButton.disabled = true;
      };
      document.head.appendChild(script);
    } else {
      initializeStockOutScanner(startButton);
    }
  }
  
  function initializeStockOutScanner(startButton) {
    try {
      const html5QrCode = new Html5Qrcode("stockout-qr-reader");
      const config = {
        fps: 10,
        qrbox: { width: 240, height: 240 },
        aspectRatio: 4/3
      };

      html5QrCode.start(
        { facingMode: "environment" }, 
        config,
        onStockOutScanSuccess,
        onStockOutScanFailure
      ).then(() => {
        stockOutQrCodeScanner = html5QrCode;
        updateStockOutScannerButtonState(true);
      }).catch((err) => {
        console.error(`Unable to start scanning: ${err}`);
        startButton.textContent = 'Start Camera';
        startButton.disabled = false;
        alert('Could not access camera. Please ensure you\'ve granted camera permissions or try entering the barcode manually.');
      });
    } catch (err) {
      console.error(err);
      startButton.textContent = 'Start Camera';
      startButton.disabled = false;
    }
  }

  function stopStockOutScanner() {
    // Delegate to Stimulus if present
    if (document.querySelector('#stockout-scanner-container[data-controller="scanner"]')) {
      const closeBtn = document.getElementById('stockout-close-camera-btn');
      if (closeBtn && !closeBtn.classList.contains('hidden')) closeBtn.click();
      return;
    }
    if (stockOutQrCodeScanner) {
      // Check if the scanner is actually running before trying to stop it
      if (stockOutQrCodeScanner._isScanning) {
        stockOutQrCodeScanner.stop().then(() => {
          stockOutQrCodeScanner = null;
          updateStockOutScannerButtonState(false);
        }).catch((err) => {
          console.error("Error stopping scanner:", err);
          stockOutQrCodeScanner = null;
          updateStockOutScannerButtonState(false);
        });
      } else {
        // Scanner was initialized but not running
        stockOutQrCodeScanner = null;
        updateStockOutScannerButtonState(false);
      }
    }
  }

  // Helper function to update button state
  function updateStockOutScannerButtonState(isScanning) {
    const startButton = document.getElementById('stockout-start-scanner');
    const closeCameraBtn = document.getElementById('stockout-close-camera-btn');
    
    if (startButton) {
      startButton.textContent = isScanning ? 'Stop Camera' : 'Start Camera';
      startButton.disabled = false;
      
      // Remove all possible color classes first
      startButton.classList.remove('bg-red-600', 'hover:bg-red-700', 'bg-gray-600', 'hover:bg-gray-700', 'bg-blue-600', 'hover:bg-blue-700');
      
      if (isScanning) {
        // When camera is running, make button gray for "Stop Camera"
        startButton.classList.add('bg-gray-600', 'hover:bg-gray-700', 'text-white');
      } else {
        // When camera is not running, make button red for "Start Camera"
        startButton.classList.add('bg-red-600', 'hover:bg-red-700', 'text-white');
      }
    }
    
    // Show/hide the close camera button
    if (closeCameraBtn) {
      if (isScanning) {
        closeCameraBtn.classList.remove('hidden');
      } else {
        closeCameraBtn.classList.add('hidden');
      }
    }
  }

  function onStockOutScanSuccess(decodedText, decodedResult) {
    // Prevent multiple rapid scans
    if (window.lastScanTime && Date.now() - window.lastScanTime < 2000) {
        return;
    }
    window.lastScanTime = Date.now();
    
    console.log(`Code scanned: ${decodedText}`);
    
    // Set the input value
    document.getElementById('stockOutBarcodeInput').value = decodedText;
    
    // Stop the scanner
    stopStockOutScanner();
    
    // Process the scanned item after a small delay to ensure scanner is stopped
    setTimeout(() => {
        processStockOutScannedItem(decodedText);
    }, 100);
  }

  // New function to process scanned items
  function processStockOutScannedItem(barcode) {
    const teamId = document.querySelector('[data-stock-transaction-team-id-value]')
        .getAttribute('data-stock-transaction-team-id-value');
    
    fetch(`/teams/${teamId}/items/find_by_barcode?barcode=${encodeURIComponent(barcode)}`)
        .then(response => response.json())
        .then(data => {
            if (data.success && data.item) {
                const item = data.item;
                
                // For stock out, validate if there's enough stock
                if (item.current_stock <= 0) {
                    showToast(`${item.name} is out of stock!`, "red");
                    closeStockOutBarcodeModal(); // Close modal after showing error
                    return;
                }
                
                // Check if item is already in the list
                const existingRow = document.querySelector(`tr[data-item-id="${item.id}"]`);
                if (existingRow) {
                    const quantityInput = existingRow.querySelector('[data-quantity]');
                    const currentQuantity = parseInt(quantityInput.value) || 0;
                    const currentStock = parseInt(existingRow.querySelector('[data-current-stock]').textContent);
                    
                    if (currentQuantity >= currentStock) {
                        showToast(`Maximum stock limit reached for ${item.name}`, "red");
                        closeStockOutBarcodeModal(); // Close modal after showing error
                        return;
                    }
                    
                    // Increment quantity by 1
                    quantityInput.value = currentQuantity + 1;
                    
                    // Update total
                    const stockTransactionController = document.querySelector('[data-controller="stock-transaction"]').__stimulusController;
                    if (stockTransactionController) {
                        stockTransactionController.updateTotal();
                    }
                    
                    showToast(`Added 1 more ${item.name}`, "green");
                    closeStockOutBarcodeModal(); // Close modal after success
                } else {
                    // Add new item to the list
                    addNewItemToList(item);
                    closeStockOutBarcodeModal(); // Close modal after adding new item
                }
            } else {
                showToast("Item not found", "red");
                closeStockOutBarcodeModal(); // Close modal after showing error
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showToast("Error processing item", "red");
            closeStockOutBarcodeModal(); // Close modal after error
        });
  }

