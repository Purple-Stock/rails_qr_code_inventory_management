<div class="min-h-screen bg-gray-50" data-controller="onboarding" data-onboarding-storage-key-value="items_index_onboarding_completed" data-onboarding-items-empty-value="<%= @items.empty? %>" data-onboarding-new-item-url-value="<%= new_team_item_path(@team) %>">
  <!-- Overlay escuro para destacar elementos -->
  <div data-onboarding-target="overlay" class="fixed inset-0 bg-black/60 z-40 pointer-events-none transition-opacity duration-300 hidden"></div>

  <!-- Container do onboarding -->
  <div data-onboarding-target="container" class="fixed inset-0 z-[9998] pointer-events-none hidden">
    <!-- Step 1: Título da página -->
    <div data-onboarding-target="step" data-onboarding-target-selector="#onboarding-items-title" class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('items.index.onboarding.step1.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('items.index.onboarding.step1.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#skip" class="text-sm text-gray-500 hover:text-gray-700"><%= t('items.index.onboarding.buttons.skip') %></button>
          <button data-action="click->onboarding#next" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
            <%= t('items.index.onboarding.buttons.next') %>
          </button>
        </div>
      </div>
    </div>

    <!-- Step 2: Busca -->
    <div data-onboarding-target="step" data-onboarding-target-selector="#onboarding-search" class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('items.index.onboarding.step2.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('items.index.onboarding.step2.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#previous" class="text-sm text-gray-500 hover:text-gray-700"><%= t('items.index.onboarding.buttons.previous') %></button>
          <div class="flex gap-2">
            <button data-action="click->onboarding#skip" class="text-sm text-gray-500 hover:text-gray-700"><%= t('items.index.onboarding.buttons.skip') %></button>
            <button data-action="click->onboarding#next" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
              <%= t('items.index.onboarding.buttons.next') %>
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Step 3: Filtro de categoria -->
    <div data-onboarding-target="step" data-onboarding-target-selector="#onboarding-category-filter" class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('items.index.onboarding.step3.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('items.index.onboarding.step3.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#previous" class="text-sm text-gray-500 hover:text-gray-700"><%= t('items.index.onboarding.buttons.previous') %></button>
          <div class="flex gap-2">
            <button data-action="click->onboarding#skip" class="text-sm text-gray-500 hover:text-gray-700"><%= t('items.index.onboarding.buttons.skip') %></button>
            <button data-action="click->onboarding#next" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
              <%= t('items.index.onboarding.buttons.next') %>
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Step 4: Exportar -->
    <div data-onboarding-target="step" data-onboarding-target-selector="#onboarding-export" class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('items.index.onboarding.step4.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('items.index.onboarding.step4.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#previous" class="text-sm text-gray-500 hover:text-gray-700"><%= t('items.index.onboarding.buttons.previous') %></button>
          <div class="flex gap-2">
            <button data-action="click->onboarding#skip" class="text-sm text-gray-500 hover:text-gray-700"><%= t('items.index.onboarding.buttons.skip') %></button>
            <button data-action="click->onboarding#next" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
              <%= t('items.index.onboarding.buttons.next') %>
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Step 5: Adicionar item -->
    <div data-onboarding-target="step" data-onboarding-target-selector="#onboarding-add-item" data-onboarding-step-number="5" class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('items.index.onboarding.step5.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('items.index.onboarding.step5.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#previous" class="text-sm text-gray-500 hover:text-gray-700"><%= t('items.index.onboarding.buttons.previous') %></button>
          <div class="flex gap-2">
            <button data-action="click->onboarding#skip" class="text-sm text-gray-500 hover:text-gray-700"><%= t('items.index.onboarding.buttons.skip') %></button>
            <% if @items.empty? %>
              <button data-action="click->onboarding#complete" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
                <%= t('items.index.onboarding.buttons.finish') %>
              </button>
            <% else %>
              <button data-action="click->onboarding#next" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
                <%= t('items.index.onboarding.buttons.next') %>
              </button>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Step 6: Tabela de itens (apenas se houver items) -->
    <% unless @items.empty? %>
      <div data-onboarding-target="step" data-onboarding-target-selector="#onboarding-items-table" data-onboarding-step-number="6" class="hidden">
        <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
          <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('items.index.onboarding.step6.title') %></h3>
          <p class="text-gray-600 mb-4"><%= t('items.index.onboarding.step6.description') %></p>
          <div class="flex justify-between items-center">
            <button data-action="click->onboarding#previous" class="text-sm text-gray-500 hover:text-gray-700"><%= t('items.index.onboarding.buttons.previous') %></button>
            <button data-action="click->onboarding#complete" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
              <%= t('items.index.onboarding.buttons.finish') %>
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-6">
      <div id="onboarding-items-title" class="flex-1 min-w-0 flex items-start gap-4">
        <div class="flex-1 min-w-0">
          <div id="onboarding-search" class="relative rounded-md shadow-sm">
            <%= form_with(url: team_items_path(@team), 
                method: :get,
                html: { autocomplete: "off" }, 
                data: { 
                  controller: "search-form",
                  search_form_delay_value: 300,
                  turbo_frame: "items_list",
                  turbo_action: "advance"
                }) do |f| %>
              <%= f.text_field :query,
                  value: params[:query],
                  class: "block w-full pr-10 sm:text-sm border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500",
                  placeholder: t('items.index.search_placeholder'),
                  data: { 
                    action: "input->search-form#search",
                    search_form_target: "input"
                  } %>
              <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
              </div>
            <% end %>
          </div>
        </div>
        <button 
          data-onboarding-target="restartButton"
          data-action="click->onboarding#restart"
          class="mt-0 inline-flex items-center px-3 py-1.5 rounded-lg text-xs font-medium text-gray-600 bg-white hover:bg-gray-50 border border-gray-300 transition-all duration-150 hidden"
          title="<%= t('items.index.onboarding.tutorial_button_title') %>">
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= t('items.index.onboarding.tutorial_button') %>
        </button>
      </div>
      
      <div class="flex items-center ml-4 space-x-4">
        <select id="onboarding-category-filter" class="block pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-purple-500 focus:border-purple-500 sm:text-sm rounded-md">
          <option><%= t('items.index.all_categories') %></option>
          <% @categories.each do |category| %>
            <option><%= category %></option>
          <% end %>
        </select>
        <%= link_to export_team_items_path(@team, format: :csv),
            id: "onboarding-export",
            class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <%= t('items.index.export_csv') %>
        <% end %>
        <%= link_to new_team_item_path(@team), 
            id: "onboarding-add-item",
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
          <%= t('items.index.add_item') %>
        <% end %>
      </div>
    </div>

    <div class="bg-white shadow rounded-lg">
      <div class="p-6">
        <%= turbo_frame_tag "items_list" do %>
          <div id="onboarding-items-table" class="flex flex-col">
            <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
              <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                  <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                      <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('items.index.qr_code') %></th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('items.index.item') %></th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('items.index.sku') %></th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('items.index.type') %></th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('items.index.current_stock') %></th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('items.index.price') %></th>
                        <th scope="col" class="relative px-6 py-3">
                          <span class="sr-only"><%= t('items.index.actions') %></span>
                        </th>
                      </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                      <% @items.each do |item| %>
                        <tr>
                          <td class="px-6 py-4 whitespace-nowrap">
                            <div class="h-10 w-10 flex items-center justify-center">
                              <%= qr_code_tag item.barcode, size: '40x40' %>
                            </div>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                              <div class="ml-4">
                                <div class="text-sm font-medium text-gray-900">
                                  <%= link_to item.name, 
                                      team_item_path(@team, item), 
                                      class: "hover:text-purple-600",
                                      data: { turbo_frame: "_top" } %>
                                </div>
                                <div class="text-sm text-gray-500"><%= item.barcode %></div>
                              </div>
                            </div>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <%= item.sku %>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                              <%= item.item_type %>
                            </span>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                              <span class="<%= item.current_stock == 0 ? 'text-red-600' : 'text-gray-900' %> text-sm font-medium">
                                <%= item.current_stock %>
                              </span>
                              <% if item.low_stock? %>
                                <span class="ml-2 flex-shrink-0">
                                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                    <%= t('items.index.low_stock') %>
                                  </span>
                                </span>
                              <% end %>
                            </div>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <%= number_to_currency(item.price, unit: "R$") %>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <div class="flex justify-end space-x-3">
                              <%= link_to edit_team_item_path(@team, item), 
                                  class: "text-purple-600 hover:text-purple-900 inline-flex items-center",
                                  data: { turbo_frame: "_top" } do %>
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                              <% end %>
                              
                              <%= button_to duplicate_team_item_path(@team, item),
                                  method: :post,
                                  class: "text-blue-600 hover:text-blue-900 inline-flex items-center",
                                  data: { 
                                    turbo_confirm: t('items.index.duplicate_confirm'),
                                    turbo_frame: "_top"
                                  } do %>
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                                </svg>
                              <% end %>
                              
                              <%= button_to team_item_path(@team, item), 
                                  method: :delete,
                                  class: "text-red-600 hover:text-red-900 inline-flex items-center",
                                  data: { 
                                    turbo_confirm: t('items.index.delete_confirm'),
                                    turbo_frame: "_top"
                                  } do %>
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                </svg>
                              <% end %>
                            </div>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 