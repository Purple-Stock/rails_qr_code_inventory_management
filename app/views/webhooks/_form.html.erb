<%= form_with(model: [@team, @webhook], local: true) do |form| %>
  <% if @webhook.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold">Holy smokes!</strong>
      <span class="block sm:inline"><%= pluralize(@webhook.errors.count, "error") %> prohibited this webhook from being saved:</span>
      <ul>
        <% @webhook.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :url, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :url, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :event, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.select :event, options_for_select(['item.created', 'stock.updated'], @webhook.event), {}, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :secret, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :secret, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
