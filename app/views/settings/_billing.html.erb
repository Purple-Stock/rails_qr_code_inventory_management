      </li>
      <li class="flex items-start">
        <svg class="h-5 w-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        <span class="ml-2 text-sm text-gray-500"><%= t('settings.billing.plans.pro.features.support') %></span>
      </li>
      <li class="flex items-start">
        <svg class="h-5 w-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        <span class="ml-2 text-sm text-gray-500"><%= t('settings.billing.plans.pro.features.reports') %></span>
      </li>
      <li class="flex items-start">
        <svg class="h-5 w-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        <span class="ml-2 text-sm text-gray-500"><%= t('settings.billing.plans.free.features.support') %></span>
      </li>
    </ul>
    <button class="mt-8 w-full bg-purple-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-purple-700">
      <% if I18n.locale == :'pt-BR' %>
        <%= link_to t('settings.billing.plans.pro.upgrade_button'), ENV['STRIPE_PRO_PLAN_BR_URL'], class: "block w-full text-center", target: "_blank" %>
      <% else %>
        <%= link_to t('settings.billing.plans.pro.upgrade_button'), ENV['STRIPE_PRO_PLAN_WORLDWIDE_URL'], class: "block w-full text-center", target: "_blank" %>
      <% end %>
    </button>
  </div>

  <!-- Enterprise Plan -->
  <div class="border border-gray-200 rounded-lg p-6">
    <h4 class="text-lg font-medium text-gray-900"><%= t('settings.billing.plans.enterprise.title') %></h4>
    <p class="mt-2 text-2xl font-bold text-gray-900"><%= t('settings.billing.plans.enterprise.price') %></p>
    <ul class="mt-6 space-y-4">
      <li class="flex items-start">
        <svg class="h-5 w-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        <span class="ml-2 text-sm text-gray-500"><%= t('settings.billing.plans.enterprise.features.pro') %></span>
      </li>
      <li class="flex items-start">
        <svg class="h-5 w-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        <span class="ml-2 text-sm text-gray-500"><%= t('settings.billing.plans.enterprise.features.items') %></span>
      </li>
      <li class="flex items-start">
        <svg class="h-5 w-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
