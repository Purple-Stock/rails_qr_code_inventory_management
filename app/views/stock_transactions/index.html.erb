<div class="min-h-screen bg-gray-50"
     data-controller="onboarding"
     data-onboarding-storage-key-value="transactions_index_onboarding_completed"
     data-onboarding-list-empty-value="<%= @transactions.empty? %>">
  <div data-onboarding-target="overlay" class="fixed inset-0 bg-black/60 z-40 pointer-events-none transition-opacity duration-300 hidden"></div>
  <div data-onboarding-target="container" class="fixed inset-0 z-[9998] pointer-events-none hidden">
    <div data-onboarding-target="step" data-onboarding-target-selector="#onboarding-transactions-title" class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('stock_transactions.index.onboarding.step1.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('stock_transactions.index.onboarding.step1.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#skip" class="text-sm text-gray-500 hover:text-gray-700"><%= t('stock_transactions.index.onboarding.buttons.skip') %></button>
          <button data-action="click->onboarding#next" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
            <%= t('stock_transactions.index.onboarding.buttons.next') %>
          </button>
        </div>
      </div>
    </div>

    <div data-onboarding-target="step" data-onboarding-target-selector="#onboarding-transactions-search" class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('stock_transactions.index.onboarding.step2.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('stock_transactions.index.onboarding.step2.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#previous" class="text-sm text-gray-500 hover:text-gray-700"><%= t('stock_transactions.index.onboarding.buttons.previous') %></button>
          <div class="flex gap-3">
            <button data-action="click->onboarding#skip" class="text-sm text-gray-500 hover:text-gray-700"><%= t('stock_transactions.index.onboarding.buttons.skip') %></button>
            <button data-action="click->onboarding#next" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
              <%= t('stock_transactions.index.onboarding.buttons.next') %>
            </button>
          </div>
        </div>
      </div>
    </div>

    <div data-onboarding-target="step" data-onboarding-target-selector="#onboarding-transactions-actions" class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('stock_transactions.index.onboarding.step3.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('stock_transactions.index.onboarding.step3.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#previous" class="text-sm text-gray-500 hover:text-gray-700"><%= t('stock_transactions.index.onboarding.buttons.previous') %></button>
          <div class="flex gap-3">
            <button data-action="click->onboarding#skip" class="text-sm text-gray-500 hover:text-gray-700"><%= t('stock_transactions.index.onboarding.buttons.skip') %></button>
            <button data-action="click->onboarding#next" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
              <%= t('stock_transactions.index.onboarding.buttons.next') %>
            </button>
          </div>
        </div>
      </div>
    </div>

    <div data-onboarding-target="step"
         data-onboarding-target-selector="#onboarding-transactions-table"
         data-onboarding-hide-when-empty-value="true"
         class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('stock_transactions.index.onboarding.step4.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('stock_transactions.index.onboarding.step4.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#previous" class="text-sm text-gray-500 hover:text-gray-700"><%= t('stock_transactions.index.onboarding.buttons.previous') %></button>
          <div class="flex gap-3">
            <button data-action="click->onboarding#skip" class="text-sm text-gray-500 hover:text-gray-700"><%= t('stock_transactions.index.onboarding.buttons.skip') %></button>
            <button data-action="click->onboarding#next" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
              <%= t('stock_transactions.index.onboarding.buttons.next') %>
            </button>
          </div>
        </div>
      </div>
    </div>

    <div data-onboarding-target="step"
         data-onboarding-target-selector="#onboarding-transactions-pagination"
         data-onboarding-hide-when-empty-value="true"
         class="hidden">
      <div data-onboarding-tooltip class="bg-white rounded-lg shadow-2xl p-6 max-w-sm pointer-events-auto z-50">
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= t('stock_transactions.index.onboarding.step5.title') %></h3>
        <p class="text-gray-600 mb-4"><%= t('stock_transactions.index.onboarding.step5.description') %></p>
        <div class="flex justify-between items-center">
          <button data-action="click->onboarding#previous" class="text-sm text-gray-500 hover:text-gray-700"><%= t('stock_transactions.index.onboarding.buttons.previous') %></button>
          <div class="flex gap-3">
            <button data-action="click->onboarding#skip" class="text-sm text-gray-500 hover:text-gray-700"><%= t('stock_transactions.index.onboarding.buttons.skip') %></button>
            <button data-action="click->onboarding#complete" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
              <%= t('stock_transactions.index.onboarding.buttons.finish') %>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div id="onboarding-transactions-title" class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-900"><%= t('stock_transactions.index.title') %></h1>

      <button
        data-onboarding-target="restartButton"
        data-action="click->onboarding#restart"
        class="hidden inline-flex items-center px-3 py-2 border border-purple-200 text-sm font-medium rounded-md text-purple-700 bg-purple-50 hover:bg-purple-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500"
        title="<%= t('stock_transactions.index.onboarding.tutorial_button_title') %>">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9M20 20v-5h-.581m-15.357-2a8.003 8.003 0 0015.357 2"/>
        </svg>
        <%= t('stock_transactions.index.onboarding.tutorial_button') %>
      </button>

      <div class="flex items-center space-x-4">
        <div id="onboarding-transactions-search" class="relative">
          <input type="text" 
                 class="block w-full pr-10 sm:text-sm border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500" 
                 placeholder="<%= t('stock_transactions.index.search_placeholder') %>">
          <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
        </div>

        <div id="onboarding-transactions-actions" class="flex items-center space-x-2">
          <%= link_to stock_in_team_stock_transactions_path(@team), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            <%= t('stock_transactions.stock_in.title') %>
          <% end %>

          <%= link_to stock_out_team_stock_transactions_path(@team), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
            </svg>
            <%= t('stock_transactions.stock_out.title') %>
          <% end %>

          <%= link_to adjust_team_stock_transactions_path(@team), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-yellow-600 hover:bg-yellow-700" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/>
            </svg>
            <%= t('stock_transactions.adjust.title') %>
          <% end %>

          <%= link_to move_team_stock_transactions_path(@team), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
            </svg>
            <%= t('stock_transactions.move.title') %>
          <% end %>

          <%= link_to stock_by_location_team_stock_transactions_path(@team), 
              class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2"/>
            </svg>
            <%= t('stock_transactions.stock_by_location.title') %>
          <% end %>

          <%= link_to team_stock_transactions_path(@team, format: :csv), 
              class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <%= t('items.index.export_csv') %>
          <% end %>
        </div>
      </div>
    </div>

    <div id="onboarding-transactions-table" class="bg-white shadow overflow-hidden sm:rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr>
            <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('stock_transactions.index.table.date') %></th>
            <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('stock_transactions.index.table.type') %></th>
            <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('stock_transactions.index.table.item') %></th>
            <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('stock_transactions.index.table.quantity') %></th>
            <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('stock_transactions.index.table.location') %></th>
            <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('stock_transactions.index.table.user') %></th>
            <th class="px-6 py-3 bg-gray-50 text-right text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('stock_transactions.index.table.actions') %></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @transactions.each do |transaction| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= transaction.created_at.strftime("%b %d, %Y %H:%M") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="<%= transaction_type_badge_class(transaction.transaction_type) %>">
                  <%= transaction.transaction_type.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= transaction.item.name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= number_with_sign(transaction.quantity) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if transaction.transaction_type_move? %>
                  <%= "#{transaction.source_location&.name} â†’ #{transaction.destination_location&.name}" %>
                <% else %>
                  <%= transaction.source_location&.name || transaction.destination_location&.name %>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= transaction.user.email %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= button_to team_stock_transaction_path(@team, transaction), 
                    method: :delete,
                    class: "text-red-600 hover:text-red-900",
                    data: { turbo_confirm: t('stock_transactions.destroy.confirm') } do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div id="onboarding-transactions-pagination" class="mt-6">
      <%= paginate @transactions %>
    </div>
  </div>
</div> 