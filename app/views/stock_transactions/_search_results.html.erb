<% if @items.any? %>
  <ul class="max-h-60 overflow-y-auto py-1">
    <% @items.each do |item| %>
      <li>
        <button type="button"
                class="w-full px-4 py-2 text-left hover:bg-gray-100 flex items-center"
                data-action="click->search#selectItem"
                data-item-id="<%= item.id %>"
                data-item-name="<%= item.name %>"
                data-item-sku="<%= item.sku %>"
                data-current-stock="<%= item.current_stock %>">
          <div class="h-8 w-8 bg-gray-100 rounded-lg flex-shrink-0"></div>
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-900"><%= item.name %></p>
            <p class="text-sm text-gray-500"><%= item.sku %></p>
          </div>
        </button>
      </li>
    <% end %>
  </ul>
<% else %>
  <div class="py-14">
    <div class="text-center">
      <svg class="mx-auto h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <p class="mt-2 text-sm text-gray-500">No items found</p>
    </div>
  </div>
<% end %> 