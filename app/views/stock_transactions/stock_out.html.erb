<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-lg shadow">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center justify-between mb-8">
          <div class="flex items-center">
            <%= link_to team_stock_transactions_path(@team), class: "mr-4 text-gray-400 hover:text-gray-500 transition-colors" do %>
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
              </svg>
            <% end %>
            <h1 class="text-2xl font-bold text-gray-900">Saída de Estoque</h1>
          </div>
          <button type="button" class="px-3 py-2 text-sm text-gray-600 hover:text-gray-900 hover:bg-gray-50 rounded-md transition-colors">Resetar</button>
        </div>

        <%= form_with(model: [@team, @transaction], class: "space-y-8") do |f| %>
          <%= f.hidden_field :transaction_type, value: 'stock_out' %>

          <div class="bg-white rounded-lg border border-gray-200 p-6">
            <div class="grid grid-cols-1 gap-y-6 gap-x-6 sm:grid-cols-3">
              <div>
                <%= f.label :source_location, "Localização", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <div class="relative rounded-md shadow-sm">
                  <%= f.select :source_location, 
                      ["Albergue"], 
                      {}, 
                      class: "block w-full pr-10 sm:text-sm border-gray-300 rounded-md focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors" %>
                  <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    </svg>
                  </div>
                </div>
              </div>

              <div>
                <%= f.label :supplier, "Fornecedor", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <div class="relative rounded-md shadow-sm">
                  <%= f.select :supplier, 
                      ["select_supplier"], 
                      {}, 
                      class: "block w-full pr-10 sm:text-sm border-gray-300 rounded-md focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors" %>
                </div>
              </div>

              <div>
                <%= f.label :date, "Data", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <div class="relative rounded-md shadow-sm">
                  <%= f.date_field :date,
                      value: Time.current.strftime("%Y-%m-%d"),
                      class: "block w-full pr-10 sm:text-sm border-gray-300 rounded-md focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors" %>
                </div>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-lg font-semibold text-gray-900">Itens</h2>
              <div class="flex items-center space-x-2">
                <button type="button" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                  </svg>
                  Adicionar em Massa
                </button>
                <button type="button" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"/>
                  </svg>
                  Importar Excel
                </button>
                <button type="button" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"/>
                  </svg>
                  Escanear Código de Barras
                </button>
              </div>
            </div>

            <div class="space-y-4">
              <div class="relative">
                <input type="text" 
                       class="block w-full pr-10 sm:text-sm border-gray-300 rounded-md focus:ring-2 focus:ring-purple-500 focus:border-purple-500" 
                       placeholder="Buscar um item para adicionar...">
                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                  </svg>
                </div>
              </div>

              <table class="min-w-full">
                <thead>
                  <tr>
                    <th class="text-left text-sm font-medium text-gray-500">Item</th>
                    <th class="text-right text-sm font-medium text-gray-500">Estoque Atual</th>
                    <th class="text-right text-sm font-medium text-gray-500">Quantidade</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                  <tr>
                    <td class="py-4 text-sm text-gray-500 italic" colspan="3">
                      Nenhum item adicionado ainda
                    </td>
                  </tr>
                </tbody>
              </table>

              <div class="flex justify-between text-sm text-gray-500">
                <span>0 itens</span>
                <span>total_quantity: 0</span>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg border border-gray-200 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-6">Observação</h2>
            
            <div>
              <%= f.text_area :notes, 
                  rows: 4,
                  class: "block w-full sm:text-sm border-gray-300 rounded-md focus:ring-2 focus:ring-purple-500 focus:border-purple-500",
                  placeholder: "Digite observações ou notas..." %>
            </div>
          </div>

          <div class="flex justify-end space-x-3 pt-4">
            <%= f.submit "Saída de Estoque", 
                class: "inline-flex justify-center py-2.5 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-colors" %>
            <%= link_to "Salvar Rascunho", "#",
                class: "inline-flex justify-center py-2.5 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-colors" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 