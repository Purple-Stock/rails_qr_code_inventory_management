<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex items-center justify-between mb-6">
      <div class="flex items-center">
        <%= link_to team_items_path(@team), class: "flex items-center text-gray-500 hover:text-gray-700" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          <span><%= t('items.show.back_to_list') %></span>
        <% end %>
        <span class="mx-2 text-gray-400">/</span>
        <h1 class="text-xl font-medium text-gray-900"><%= @item.name %></h1>
      </div>

      <div class="flex items-center space-x-2">
        <%= link_to stock_in_team_stock_transactions_path(@team), class: "inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-md" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
          <%= t('items.show.transaction_filters.stock_in') %>
        <% end %>

        <%= link_to stock_out_team_stock_transactions_path(@team), class: "inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-md" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
          </svg>
          <%= t('items.show.transaction_filters.stock_out') %>
        <% end %>

        <%= link_to adjust_team_stock_transactions_path(@team), class: "inline-flex items-center px-4 py-2 bg-yellow-600 hover:bg-yellow-700 text-white rounded-md" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/>
          </svg>
          <%= t('items.show.transaction_filters.adjust') %>
        <% end %>

        <%= link_to move_team_stock_transactions_path(@team), class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
          </svg>
          <%= t('items.show.transaction_filters.move') %>
        <% end %>

        <%= link_to edit_team_item_path(@team, @item), class: "inline-flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-md" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          <%= t('items.form.buttons.edit') %>
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-3 gap-6">
      <div class="col-span-2">
        <div class="bg-white rounded-lg shadow">
          <div class="px-4 py-5 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-medium text-gray-900 flex items-center">
                <svg class="w-5 h-5 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
                <%= t('items.show.overview') %>
              </h3>
            </div>
          </div>

          <div class="px-4 py-5">
            <h4 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-4"><%= t('items.show.item_information') %></h4>
            <dl class="grid grid-cols-2 gap-4">
              <div>
                <dt class="text-sm font-medium text-gray-500"><%= t('items.show.fields.sku') %></dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @item.sku %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500"><%= t('items.show.fields.name') %></dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @item.name %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500"><%= t('items.show.fields.barcode') %></dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @item.barcode %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500"><%= t('items.show.fields.cost') %></dt>
                <dd class="mt-1 text-sm text-gray-900"><%= number_to_currency(@item.cost) %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500"><%= t('items.show.fields.price') %></dt>
                <dd class="mt-1 text-sm text-gray-900"><%= number_to_currency(@item.price) %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500"><%= t('items.show.fields.type') %></dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @item.item_type %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500"><%= t('items.show.fields.brand') %></dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @item.brand %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500"><%= t('items.show.fields.location') %></dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @item.location&.name || t('items.show.no_location') %></dd>
              </div>
            </dl>
          </div>
        </div>
      </div>

      <div>
        <div class="bg-white rounded-lg shadow mb-6">
          <div class="px-4 py-5">
            <h3 class="text-lg font-medium text-gray-900 mb-4"><%= t('items.show.current_status') %></h3>
            <div class="text-center">
              <p class="text-5xl font-bold text-purple-600 mb-2"><%= @item.current_stock %></p>
              <p class="text-sm text-gray-500"><%= t('items.show.total_stock') %></p>
            </div>
            
            <div class="mt-6" data-controller="transaction-filter">
              <div class="flex items-center space-x-2 mb-4">
                <%= link_to t('items.show.transaction_filters.all'), "#",
                    class: "filter-button px-3 py-1 rounded-full text-sm bg-black text-white",
                    data: { 
                      action: "transaction-filter#filter",
                      type: "all"
                    } %>
                
                <% [
                  ['stock_in', t('items.show.transaction_filters.stock_in')],
                  ['stock_out', t('items.show.transaction_filters.stock_out')],
                  ['adjust', t('items.show.transaction_filters.adjust')],
                  ['move', t('items.show.transaction_filters.move')]
                ].each do |type, label| %>
                  <%= link_to label, "#",
                      class: "filter-button px-3 py-1 rounded-full text-sm text-gray-600 hover:bg-gray-200",
                      data: { 
                        action: "transaction-filter#filter",
                        type: type
                      } %>
                <% end %>
              </div>

              <div class="space-y-3 max-h-96 overflow-y-auto">
                <% @transactions.each do |transaction| %>
                  <div class="flex items-start space-x-3 py-3 border-b border-gray-100 last:border-0"
                       data-transaction-filter-target="transaction"
                       data-transaction-type="<%= transaction.transaction_type %>">
                    <div class="flex-shrink-0">
                      <% icon_class = case transaction.transaction_type 
                        when 'stock_in' then 'rotate-180 text-green-500'
                        when 'stock_out' then 'text-red-500'
                        when 'adjust' then 'text-blue-500'
                        when 'move' then 'text-yellow-500'
                        end %>
                      
                      <svg class="w-5 h-5 <%= icon_class %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <% case transaction.transaction_type 
                          when 'stock_in', 'stock_out' %>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h6m4 0l4-4m0 0l4 4m-4-4v12"/>
                        <% when 'adjust' %>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/>
                        <% when 'move' %>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
                        <% end %>
                      </svg>
                    </div>

                    <div class="flex-1 min-w-0">
                      <div class="flex items-center justify-between">
                        <div>
                          <p class="text-sm font-medium text-gray-900">
                            <%= transaction.transaction_type.upcase %>
                          </p>
                          <p class="text-xs text-gray-500">
                            <%= l transaction.created_at, format: :short %>
                          </p>
                        </div>
                        <span class="text-sm font-medium <%= transaction.quantity.positive? ? 'text-green-600' : 'text-red-600' %>">
                          <%= transaction.quantity.positive? ? "+#{transaction.quantity}" : transaction.quantity %>
                        </span>
                      </div>
                      <% if transaction.notes.present? %>
                        <p class="text-xs text-gray-600 mt-1"><%= transaction.notes %></p>
                      <% end %>
                      <% if transaction.destination_location.present? %>
                        <p class="text-xs text-gray-500"><%= t('items.show.transaction.at') %>: <%= transaction.destination_location.name %></p>
                      <% end %>
                      <% if transaction.source_location.present? %>
                        <p class="text-xs text-gray-500"><%= t('items.show.transaction.from') %>: <%= transaction.source_location.name %></p>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow">
          <div class="px-4 py-5">
            <h3 class="text-lg font-medium text-gray-900 mb-4"><%= t('items.show.qr_code') %></h3>
            <div class="flex justify-center">
              <%= qr_code_tag @item.sku %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 